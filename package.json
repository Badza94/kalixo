{
  "name": "kalixo",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "build": "turbo build",
    "dev": "turbo dev",
    "dev:builder": "cd apps/builder && pnpm run dev",
    "dev:cms": "cd apps/cms && pnpm run dev",
    "dev:shops": "cd apps/shops && pnpm run dev",
    "lint": "turbo lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "postinstall": "bash ./scripts/setup-shared-assets.sh apps/builder copy && bash ./scripts/setup-shared-assets.sh apps/cms copy && bash ./scripts/setup-shared-assets.sh apps/shops copy"
  },
  "devDependencies": {
    "@workspace/eslint-config": "workspace:*",
    "@workspace/typescript-config": "workspace:*",
    "prettier": "^3.6.2",
    "turbo": "^2.5.5",
    "typescript": "5.7.3"
  },
  "packageManager": "pnpm@10.4.1",
  "engines": {
    "node": ">=20"
  }
}
